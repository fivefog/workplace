<view class = 'movie' wx:for="{{movieList}}" wx:key="index">
  <image class="img" src="{{item.images.small}}"></image>
  <view class="movie-info">
    <view class="movie-title">{{item.title}}</view>
   <view>观众评分：<text class="movie-score">{{item.rating.average}}分</text></view> 
   <view>时长：{{item.durations}}</view>
   <view>主演：
   <text wx:for="{{item.casts}}" wx:key="index">{{item.name}} </text>
   </view>

  </view>
  <van-button type="warning" size="mini" data-movieId="{{item.id}}" bindtap="toComment">评价</van-button>

</view>